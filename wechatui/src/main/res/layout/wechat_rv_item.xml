<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginBottom="10dp"
        android:background="#CCCCCC"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="10dp"
        android:paddingVertical="10dp">


        <ImageView
            android:id="@+id/wechat_rv_item_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            tools:src="@drawable/friend"/>

        <TextView
            android:id="@+id/wechat_rv_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_toRightOf="@+id/wechat_rv_item_icon"
            android:layout_marginBottom="5dp"
            android:textColor="#333333"
            tools:text="我是大标题"/>

        <TextView
            android:id="@+id/wechat_rv_item_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_below="@+id/wechat_rv_item_title"
            android:layout_toRightOf="@+id/wechat_rv_item_icon"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_marginRight="50dp"
            tools:text="我是内容我是内容我是内容我是内容我是内容我是内容我是内容我是内容我是内容我是内容我是内容"/>

        <TextView
            android:id="@+id/wechat_rv_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10dp"
            tools:text="09:18"/>

        <ImageView
            android:id="@+id/wechat_rv_item_tip"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignRight="@+id/wechat_rv_item_time"
            android:layout_below="@+id/wechat_rv_item_time"
            tools:src="@drawable/mine"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/wechat_rv_item_load_more"
        android:gravity="center"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorDefault"
        android:textSize="16dp"
        android:text="加载更多..."/>
</LinearLayout>
